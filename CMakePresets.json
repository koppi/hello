{
	"version": 6,
	"configurePresets": [
		{
			"name": "common",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "build/${presetName}"
		},
		{
			"name": "debug",
			"displayName": "Debug",
			"inherits": "common",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"displayName": "Release",
			"inherits": "common",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "common-windows",
			"hidden": true,
			"generator": "Visual Studio 17 2022",
			"binaryDir": "build/${presetName}"
		},
		{
			"name": "debug-windows",
			"displayName": "Debug Windows",
			"inherits": "common-windows",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release-windows",
			"displayName": "Release Windows",
			"inherits": "common-windows",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		}
	],
	"buildPresets": [
		{
			"name": "app-debug",
			"displayName": "Build Debug",
			"configurePreset": "debug",
			"configuration": "Debug"
		},
		{
			"name": "app-release",
			"displayName": "Build Release",
			"configurePreset": "release",
			"configuration": "Release",
			"targets": ["app"]
		},
		{
			"name": "app-debug-windows",
			"displayName": "Build Debug",
			"configurePreset": "debug-windows",
			"configuration": "Debug"
		},
		{
			"name": "app-release-windows",
			"displayName": "Build Release",
			"configurePreset": "release-windows",
			"configuration": "Release",
			"targets": ["app"]
		}
  ]
}
